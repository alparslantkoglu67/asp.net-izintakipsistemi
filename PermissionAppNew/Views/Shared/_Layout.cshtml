                        {

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User"
                                    asp-action="UserList">Çalışanlar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User"
                                    asp-action="InternList">Stajyerler</a>
                            </li>
                        }


                    </ul>
